{
    "name": "solito-template",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "devDependencies": {
        "@types/react": "~19.0.10",
        "eslint": "^8.21.0",
        "turbo": "^2.4.4",
        "typescript": "~5.8.3"
    },
    "scripts": {
        "native": "cd apps/expo && yarn start --dev-client",
        "web": "cd apps/next && yarn next --turbo"
    },
    "packageManager": "yarn@4.7.0",
    "eslintConfig": {
        "extends": "next",
        "settings": {
            "next": {
                "rootDir": "apps/next/"
            }
        },
        "root": true
    },
    "prettier": {
        "semi": false,
        "useTabs": false,
        "tabWidth": 4,
        "trailingComma": "all",
        "singleQuote": true
    }
}
