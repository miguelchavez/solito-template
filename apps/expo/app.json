{
    "expo": {
        "name": "Solito-Template",
        "slug": "Solito-Template",
        "version": "1.0.0",
        "scheme": "solito-template",
        "platforms": ["ios", "android"],
        "orientation": "default",
        "icon": "../../packages/app/assets/images/icon.png",
        "userInterfaceStyle": "automatic",
        "backgroundColor": "#ffffff",
        "assetBundlePatterns": ["**/*"],
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "../../packages/app/assets/images/adaptive-icon.png",
                "backgroundColor": "#ffffff"
            },
            "package": "com.example.solitotemplate",
            "softwareKeyboardLayoutMode": "pan"
        },
        "ios": {
            "bundleIdentifier": "com.example.solito-template",
            "googleServicesFile": "./GoogleService-Info.plist",
            "supportsTablet": true,
            "userInterfaceStyle": "automatic",
            "backgroundColor": "#ffffff"
        },
        "web": {
            "bundler": "metro",
            "output": "static",
            "favicon": "../../packages/app/assets/images/favicon.png"
        },
        "newArchEnabled": true,
        "experiments": {
            "reactCanary": true,
            "reactCompiler": true
        },
        "plugins": [
            "expo-router",
            "expo-font",
            "@react-native-firebase/app",
            "@react-native-firebase/auth",
            [
                "expo-splash-screen",
                {
                    "image": "../../packages/app/assets/images/splash.png",
                    "imageWidth": 200,
                    "resizeMode": "contain",
                    "backgroundColor": "#ffffff"
                }
            ],
            [
                "expo-dev-client",
                {
                    "launchMode": "most-recent"
                }
            ],
            [
                "expo-build-properties",
                {
                    "ios": {
                        "useFrameworks": "static"
                    }
                }
            ]
        ],
        "extra": {
            "router": {
                "origin": false
            },
            "eas": {
                "projectId": "YOUR_EAS_PROJECT_ID"
            }
        }
    }
}
